<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VerticalViewPager">
        <attr name="isVertical" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <attr name="week_layout_height" format="dimension"/>
        <attr name="week_layout" format="reference"/>
        <attr name="itemHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CalendarView2">
        <attr name="week_layout_height2" format="dimension"/>
        <attr name="week_layout2" format="reference"/>
        <attr name="itemHeight2" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DayView">
        <attr name="day_status" format="enum">
            <enum name="gone" value="0"/>
            <enum name="single" value="1" />
            <enum name="start" value="2" />
            <enum name="center" value="3" />
            <enum name="end" value="4" />
        </attr>
        <attr name="day_isUpdate" format="boolean" />
        <attr name="day_isSelect" format="boolean" />
        <attr name="day_isToday" format="boolean" />
        <attr name="day_isDelayUpdate" format="boolean" />
        <attr name="day_isGone" format="boolean" />

        <attr name="day_updateBackgroundColor" format="color" />
        <attr name="day_updateStrokeColor" format="color" />
        <attr name="day_updateSelectedColor" format="color" />
        <attr name="day_overBackgroundColor" format="color" />
        <attr name="day_overStrokeColor" format="color" />
        <attr name="day_overSelectedColor" format="color" />
        <attr name="day_todayBackgroundColor" format="color" />
        <attr name="day_dotColor" format="color" />
        <attr name="day_todayDotColor" format="color" />
        <attr name="day_goneTextColor" format="color" />
        <attr name="day_defaultTextColor" format="color" />
        <attr name="day_todayTextColor" format="color" />

        <attr name="day_text" format="string" />
        <attr name="day_textSize" format="dimension" />
        <attr name="day_dotSize" format="dimension" />
        <attr name="day_paddingSize" format="dimension" />
        <attr name="day_strokeWidth" format="dimension" />

    </declare-styleable>

    <declare-styleable name="MonthView">
        <attr name="month_mode" format="enum">
            <enum name="month" value="0"/>
            <enum name="week" value="1" />
        </attr>
        <attr name="month_updateBackgroundColor" format="color" />
        <attr name="month_updateStrokeColor" format="color" />
        <attr name="month_updateSelectedColor" format="color" />
        <attr name="month_overBackgroundColor" format="color" />
        <attr name="month_overStrokeColor" format="color" />
        <attr name="month_overSelectedColor" format="color" />
        <attr name="month_todayBackgroundColor" format="color" />
        <attr name="month_dotColor" format="color" />
        <attr name="month_todayDotColor" format="color" />
        <attr name="month_goneTextColor" format="color" />
        <attr name="month_defaultTextColor" format="color" />
        <attr name="month_todayTextColor" format="color" />

        <attr name="month_text" format="string" />
        <attr name="month_textSize" format="dimension" />
        <attr name="month_dotSize" format="dimension" />
        <attr name="month_paddingSize" format="dimension" />
        <attr name="month_strokeWidth" format="dimension" />

    </declare-styleable>
</resources>