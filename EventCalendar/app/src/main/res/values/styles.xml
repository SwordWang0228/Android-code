<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calendar_month">
        <item name="month_updateBackgroundColor">#0A2477FA</item>
        <item name="month_updateStrokeColor">#FF2477FA</item>
        <item name="month_updateSelectedColor">#FFCADEFE</item>
        <item name="month_overBackgroundColor">#14FF665B</item>
        <item name="month_overStrokeColor">#99FF665B</item>
        <item name="month_overSelectedColor">#FFFFC5C1</item>

        <item name="month_todayBackgroundColor">#FF2477FA</item>
        <item name="month_dotColor">#FF2477FA</item>
        <item name="month_todayDotColor">#99FFFFFF</item>
        <item name="month_goneTextColor">#33222222</item>
        <item name="month_defaultTextColor">#FF222222</item>
        <item name="month_todayTextColor">#FFFFFFFF</item>

        <item name="month_textSize">15sp</item>
        <item name="month_dotSize">5dp</item>
        <item name="month_paddingSize">3dp</item>
        <item name="month_strokeWidth">1dp</item>
    </style>

</resources>