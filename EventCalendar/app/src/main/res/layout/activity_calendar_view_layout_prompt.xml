<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/const_attendance_prompt"
    android:layout_width="252dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="139dp"
    android:background="@drawable/reward_pop"
    android:paddingTop="16dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_attendance_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="September's Daily Update Reward"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_attendance_prompt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="$50 Daily Update Reward has been sent."
        android:textColor="#FF7FB0FF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_attendance_prompt_title"
        app:layout_constraintTop_toBottomOf="@id/tv_attendance_prompt_title" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:collapseColumns="3"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_attendance_prompt_description">

        <View
            android:id="@+id/view_horizontal_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFFFF" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Monthly Updated\nWordcount"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_vertical_line1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Amount"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

        </TableRow>

        <View
            android:id="@+id/view_horizontal_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFFFF" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Less than 40,000"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_vertical_line2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="No Reward"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

        </TableRow>

        <View
            android:id="@+id/view_horizontal_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFFFF" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="40,000 to 49,999"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_vertical_line3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="50 USD"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

        </TableRow>

        <View
            android:id="@+id/view_horizontal_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFFFF" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="More than 50,000 words"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_vertical_line4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10 USD"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>