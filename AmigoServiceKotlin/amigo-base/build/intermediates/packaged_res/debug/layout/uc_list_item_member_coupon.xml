<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout android:id="@+id/layout_list_item_coupon_unuse"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp">

        <LinearLayout
                android:layout_width="340dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/uc_bg_member_coupon_list"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txt_list_item_member_coupon_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#d1773b"
                            android:textSize="30dp"/>
                    <TextView
                            android:id="@+id/txt_list_item_member_coupon_number_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#d1773b"
                            android:text="@string/uc_title_member_coupon_unit"
                            android:textSize="14dp"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/txt_list_item_member_coupon_number_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#99000000"
                        android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/txt_list_item_member_coupon_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cc000000"
                        android:textSize="16dp"/>

                <TextView
                        android:id="@+id/txt_list_item_member_coupon_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#66000000"
                        android:textSize="12dp"
                        android:singleLine="true"/>
                <TextView
                        android:id="@+id/txt_list_item_member_coupon_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#66000000"
                        android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp">
            <ImageView
                    android:id="@+id/img_list_item_member_coupon_sanjiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uc_bg_member_coupon_list_type_unuse_sanjiao"
                    android:scaleType="center"/>
            <TextView
                    android:id="@+id/txt_list_item_member_coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/uc_bg_member_coupon_list_type_unuse"
                    android:textColor="#fafafa"
                    android:textSize="12dp"
                    android:gravity="center"/>

        </LinearLayout>
    </FrameLayout>


    <FrameLayout android:id="@+id/layout_list_item_coupon_used"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:visibility="gone">

        <LinearLayout
                android:layout_width="340dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/uc_bg_member_coupon_list"
                android:orientation="horizontal">


            <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txt_list_item_member_coupon_number_used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#33000000"
                            android:textSize="30dp"/>
                    <TextView
                            android:id="@+id/txt_list_item_member_coupon_number_unit_used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#33000000"
                            android:text="@string/uc_title_member_coupon_unit"
                            android:textSize="14dp"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/txt_list_item_member_coupon_number_limit_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#33000000"
                        android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="8dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/txt_list_item_member_coupon_name_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#66000000"
                        android:textSize="16dp"/>

                <TextView
                        android:id="@+id/txt_list_item_member_coupon_description_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#33000000"
                        android:textSize="12dp"
                        android:singleLine="true"/>
                <TextView
                        android:id="@+id/txt_list_item_member_coupon_duration_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#33000000"
                        android:textSize="12dp"/>


            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uc_bg_list_item_coupon_line"
                    android:scaleType="center"/>
            <TextView
                    android:id="@+id/txt_list_item_member_coupon_status_used"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textColor="#33000000"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp">
            <ImageView
                    android:id="@+id/img_list_item_member_coupon_sanjiao_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uc_bg_member_coupon_list_type_used_sanjiao"
                    android:scaleType="center"/>
            <TextView
                    android:id="@+id/txt_list_item_member_coupon_type_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/uc_bg_member_coupon_list_type_used"
                    android:textColor="#fafafa"
                    android:textSize="12dp"
                    android:gravity="center"/>

        </LinearLayout>
    </FrameLayout>
    <View
        android:id="@+id/view_list_item_member_integral_record_line_last"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:background="#33828282"/>
</LinearLayout>