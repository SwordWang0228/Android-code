<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/uc_default_activity_background_color">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/layout_member_integral_task"
            android:visibility="gone">
        <LinearLayout
                android:id="@+id/layout_member_integral_task_num"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uc_ic_member_integral_quotation_left"
                    android:scaleType="center"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:id="@+id/txt_member_integral_task_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#cc000000"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uc_ic_member_integral_quotation_right"
                    android:scaleType="center"
                    android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_member_integral_task_prize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@color/uc_default_activity_content_background_color"
                android:orientation="vertical">

            <View android:layout_width="match_parent"
                  android:layout_height="0.67dp"
                  android:background="@color/uc_default_line_color"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="14dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/uc_ic_member_integral_speaker"
                        android:layout_gravity="center_vertical"/>

                <com.gionee.gnservice.widget.AutoVerticalScrollTextView
                        android:id="@+id/txt_member_integral_task_prize"
                        android:layout_marginLeft="12dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:textColor="#cc000000"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="0.67dp"
                  android:background="@color/uc_default_line_color"/>

        </LinearLayout>

        <ListView
                android:id="@+id/listview_member_integral_make_daily"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:dividerHeight="8dp"/>
    </LinearLayout>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_member_integral_make_daily"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/layout_member_integral_daily_task_empty"
            android:visibility="gone">
        <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/uc_ic_member_integral_task_empty"
                android:scaleType="center"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#33000000"
                android:layout_gravity="center_horizontal"
                android:text="@string/uc_txt_member_integral_task_empty"/>
    </LinearLayout>
</RelativeLayout>
