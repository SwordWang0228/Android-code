<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/all_book_relative"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/all_book_imageview"
        android:layout_width="72dp"
        android:layout_height="102dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/book_default_bg"/>

    <ImageView
        android:id="@+id/ads_img"
        android:layout_width="102dp"
        android:layout_height="83dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/book_default_bg"/>

    <RelativeLayout
        android:id="@+id/ads_layout"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_toRightOf="@+id/ads_img">
        <TextView
            android:id="@+id/ads_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:letterSpacing="0.03"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14.3sp"
            android:textColor="#545c67"
            />

        <TextView
            android:id="@+id/all_book_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ads_bg"
            android:letterSpacing="0.03"
            android:layout_marginLeft="14.3dp"
            android:text="@string/ads_text"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/all_book_ads_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/all_book_ads"
            android:paddingLeft="5dp"
            android:letterSpacing="0.03"
            android:layout_toLeftOf="@+id/all_book_ads_close"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#1e252f"
            />

        <ImageView
            android:id="@+id/all_book_ads_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/ads_close"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_book_layout"
        android:layout_toRightOf="@+id/all_book_imageview"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/all_book_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:letterSpacing="0.03"
            android:textSize="16sp"
            android:textColor="#1e252f"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/score"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/book_score"
            android:letterSpacing="0.02"
            tools:text="9.8分"
            />

        <TextView
            android:layout_below="@+id/all_book_title_textview"
            android:id="@+id/all_book_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.03"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13.3sp"
            android:textColor="#545c67"
            />

        <TextView
            android:id="@+id/all_book_author_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14.9dp"
            android:letterSpacing="0.03"
            android:textColor="#939aa2"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/all_book_categoryname_textview"
            tools:text="发烧发烧"
            android:textSize="10.7sp" />

        <TextView
            android:id="@+id/all_book_categoryname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/textview_bg"
            android:letterSpacing="0.03"
            android:textColor="#949ba5"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="发烧发烧发烧"
            android:textSize="10sp" />


    </RelativeLayout>
</RelativeLayout>