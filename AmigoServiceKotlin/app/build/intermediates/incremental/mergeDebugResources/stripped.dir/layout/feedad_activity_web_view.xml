<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/view_bg">

    <RelativeLayout
        android:id="@+id/bcad_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/bcad_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/bcad_back" />

        <TextView
            android:id="@+id/bcad_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bcad_btn_back"
            android:layout_toLeftOf= "@+id/bcad_btn_close"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="?attr/text_title"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/bcad_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/bcad_close"
            android:visibility="gone"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/bcad_id_progress_bar"
        style="@style/StyleProgressBarMini"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/bcad_top_bar"
        android:background="@drawable/feed_shape_progressbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bcad_id_progress_bar">

        <com.feedad.webview.CloverWeakWebView
            android:id="@+id/bcad_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.feedad.webview.ErrorView
            android:id="@+id/bcad_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>