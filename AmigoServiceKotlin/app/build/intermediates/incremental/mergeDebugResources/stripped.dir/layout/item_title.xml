<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/type_line"
    android:id="@+id/reco_title_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <TextView
        android:id="@+id/tv_title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/book_tab"/>

    <LinearLayout
        android:id="@+id/reco_type_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/reco_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/book_tab_blue"
            android:textSize="14sp"/>
        <ImageView
            android:layout_marginLeft="4.7dp"
            android:id="@+id/reco_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>