<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat">

    <RelativeLayout
        android:id="@+id/tab_channel_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <com.github.colortrackview.ColorTrackTabLayout
            android:id="@+id/tab_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffffff"
            android:paddingStart="8dp"
            android:textSize="15sp"
            app:tabBackground="@drawable/feed_ripple_tab"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/color_ff3697ff"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/color_ff3697ff"
            app:tabTextAppearance="@style/TextAppearanceHome"
            app:tabTextColor="@color/color_fff666666"/>

        <ImageView
            android:id="@+id/iv_operation"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:scaleType="center"
            android:src="@mipmap/feed_add_channel"/>

    </RelativeLayout>

    <View
        android:id="@+id/tab_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <com.hs.feed.ui.CustomViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>