<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whites">

    <RelativeLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <android.support.design.widget.TabLayout
            android:id="@+id/class_tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/book_back"
            android:layout_toLeftOf="@+id/book_title_search"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            app:tabBackground="@color/transparent"
            app:tabRippleColor="@color/transparent"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabTextColor="@color/nb_read_bg_night"
            app:tabSelectedTextColor="@color/tab_select_text_color"/>

        <ImageView
            android:id="@+id/book_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="17dp"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@drawable/toolbar_back" />

        <ImageView
            android:id="@+id/book_title_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="17dp"
            android:paddingRight="10dp"
            android:src="@drawable/search_icon"
            />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:layout_below="@+id/title_lay"
        android:id="@+id/class_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>