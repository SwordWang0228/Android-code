<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlItemView"
    android:layout_width="wrap_content"
    android:layout_height="38dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/tvChannel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/feed_bg_channel_shape">
        <TextView
            android:id="@+id/tvChannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/feed_edit"
            android:textColor="?attr/text_title"
            android:textSize="15sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="6"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="?attr/channel_del_img"
        android:visibility="visible" />

</RelativeLayout>