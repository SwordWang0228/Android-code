<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="21dp"
    android:paddingTop="15dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_native_ad_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="这招太狠了,白开水加它，廋的不敢相信"
        android:textColor="#545C67"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_native_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_native_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#191D21"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="会飞的鱼"
            android:layout_toLeftOf="@+id/btn_native_creative"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/btn_native_creative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_corner_with_red"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="查看详情"
            android:textSize="12sp"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>