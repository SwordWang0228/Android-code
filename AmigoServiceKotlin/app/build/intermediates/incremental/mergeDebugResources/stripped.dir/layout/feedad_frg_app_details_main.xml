<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/view_bg"
    android:orientation="vertical">

    <include layout="@layout/feedad_title_bar" />

    <FrameLayout
        android:id="@+id/layout_app_details_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/bcad_id_progress_bar"
                style="@style/StyleProgressBarMini"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:indeterminate="true"
                android:background="@drawable/feed_shape_progressbar_bg" />
            <ScrollView
                android:id="@+id/scroll_view_app_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bcad_recycler_v_icon_margin_left"
                        android:layout_marginTop="@dimen/bcad_details_margin_title"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/details_app_icon"
                            android:layout_width="@dimen/bcad_detail_app_icon_size"
                            android:layout_height="@dimen/bcad_detail_app_icon_size"
                            android:src="@color/bcad_image_empty" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/bcad_layout_margin"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/details_app_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="?attr/item_title"
                                android:textSize="@dimen/bcad_text_category_type" />

                            <TextView
                                android:id="@+id/details_app_one_word"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/bcad_details_text_text_gap"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="?attr/sub_item_first"
                                android:textSize="@dimen/bcad_text_app_name" />

                            <TextView
                                android:id="@+id/app_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/bcad_details_text_text_gap"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="?attr/sub_tem_second"
                                android:textSize="@dimen/bcad_text_app_name" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--<android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_app_screenshot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/details_recycle_margin_bottom"
                        android:layout_marginTop="@dimen/details_recycle_margin_top"
                        android:overScrollMode="never" />-->
                    <HorizontalScrollView
                        android:id="@+id/horizontal_scroll_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/bcad_details_recycle_margin_bottom"
                        android:layout_marginTop="@dimen/bcad_details_recycle_margin_top"
                        >
                        <LinearLayout
                            android:id="@+id/horizontal_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </HorizontalScrollView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bcad_category_type_height">

                        <LinearLayout
                            android:id="@+id/unfold_fold_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/bcad_summary_arrow_margin_right"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/text_unfold_fold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bcad_unfold_more"
                                android:textColor="?attr/sub_item_first"
                                android:textSize="@dimen/bcad_text_app_name" />

                            <ImageView
                                android:id="@+id/image_unfold_fold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/bcad_cf_ic_arrows_more" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/bcad_layout_margin"
                            android:text="@string/bcad_summary"
                            android:textColor="?attr/item_title"
                            android:textSize="@dimen/bcad_text_category_type" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text_summary_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bcad_layout_margin"
                        android:layout_marginRight="@dimen/bcad_layout_margin"
                        android:layout_marginTop="@dimen/bcad_details_content_margin_top"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="?attr/sub_item_first"
                        android:textSize="@dimen/bcad_details_summary_text_size" />

                    <TextView
                        android:id="@+id/bcad_developer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/bcad_category_type_height"
                        android:layout_marginLeft="@dimen/bcad_layout_margin"
                        android:layout_marginTop="@dimen/bcad_details_sub_title_margin_top"
                        android:text="@string/bcad_developer"
                        android:textColor="?attr/item_title"
                        android:textSize="@dimen/bcad_text_category_type" />

                    <TextView
                        android:id="@+id/text_developer_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/bcad_details_margin_bottom"
                        android:layout_marginLeft="@dimen/bcad_layout_margin"
                        android:layout_marginRight="@dimen/bcad_layout_margin"
                        android:layout_marginTop="@dimen/bcad_details_content_margin_top"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?attr/sub_item_first"
                        android:textSize="@dimen/bcad_text_app_name" />
                </LinearLayout>

            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bcad_dividing_height"
                android:background="@color/bcad_dividing" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bcad_layout_bottom_height">

                <com.feedad.activities.details.widget.progressButton.ProgressButton
                    android:id="@+id/details_app_download_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/bcad_details_progress_margin_top_bottom"
                    android:layout_marginLeft="@dimen/bcad_details_progress_margin_left_right"
                    android:layout_marginRight="@dimen/bcad_details_progress_margin_left_right"
                    android:layout_marginTop="@dimen/bcad_details_progress_margin_top_bottom"
                    android:text="@string/bcad_install"
                    android:textSize="@dimen/bcad_text_search"
                    app:bcad_downloadedColor="@color/bcad_progress_downloaded"
                    app:bcad_normalColor="@color/bcad_progress_downloaded"
                    app:bcad_pbRadius="6"
                    app:bcad_textColor="@color/bcad_progress_text_white"
                    app:bcad_unDownloadColor="@color/bcad_progress_un_download" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
