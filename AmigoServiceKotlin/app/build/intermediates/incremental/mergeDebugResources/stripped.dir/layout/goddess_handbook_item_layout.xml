<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goddess_handbook_linear"
    android:orientation="vertical"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/goddess_handbook_imageview"
        android:layout_width="71.7dp"
        android:layout_height="101.7dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/book_default_bg"/>
    <TextView
        android:id="@+id/goddess_handbook_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13.3sp"
        android:textColor="#1e252f"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="2.7sp"
        android:maxLines="2"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/goddess_handbook_imageview"
        android:text="@string/category_sub_recommend_view_all_text"/>

</LinearLayout>