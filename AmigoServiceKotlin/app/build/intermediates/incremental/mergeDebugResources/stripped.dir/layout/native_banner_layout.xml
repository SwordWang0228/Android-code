<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="80dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/image"
        android:layout_width="121.5dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/ad_logo"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/desc_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image"
        android:maxLines="1"
        android:textColor="#F55D38"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="蛋壳公寓" />

    <TextView
        android:id="@+id/desc_tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_tx"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="13.5dp"
        android:layout_toRightOf="@id/image"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="已经在蛋壳公寓住了3年了，它让我在本地有了个家" />

    <ImageView
        android:layout_width="19dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/cmgame_sdk_ad_logo_new" />
</RelativeLayout>