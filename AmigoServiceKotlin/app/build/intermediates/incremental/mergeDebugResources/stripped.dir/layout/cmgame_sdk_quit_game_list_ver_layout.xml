<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <RelativeLayout
        android:id="@+id/game_item_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_quit_game_icon"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_quit_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_quit_game_icon"
            android:layout_alignTop="@id/iv_quit_game_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            tools:text="钢琴块2"
            android:textColor="#FF222222"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_quit_game_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_quit_game_name"
            android:layout_alignBottom="@id/iv_quit_game_icon"
            android:layout_marginBottom="4dp"
            tools:text="人人都是钢琴大师"
            android:textColor="#FF888888"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_quit_game_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/cmgame_sdk_bg_quit_start_btn_selector"
            android:text="@string/cmgame_sdk_lable_start"
            android:textColor="#FFFFFFFF"
            android:textSize="11sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game_item_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_quit_game_icon2"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_quit_game_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_quit_game_icon2"
            android:layout_alignTop="@id/iv_quit_game_icon2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            tools:text="钢琴块2"
            android:textColor="#FF222222"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_quit_game_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_quit_game_name2"
            android:layout_alignBottom="@id/iv_quit_game_icon2"
            android:layout_marginBottom="4dp"
            tools:text="人人都是钢琴大师"
            android:textColor="#FF888888"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_quit_game_start_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/cmgame_sdk_bg_quit_start_btn_selector"
            android:text="@string/cmgame_sdk_lable_start"
            android:textColor="#FFFFFFFF"
            android:textSize="11sp"/>
    </RelativeLayout>
</LinearLayout>