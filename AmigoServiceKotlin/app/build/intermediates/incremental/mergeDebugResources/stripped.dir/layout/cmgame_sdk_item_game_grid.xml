<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cmgame_sdk_gamelist_item_width"
    android:layout_height="@dimen/cmgame_sdk_gamelist_item_height">

    <ImageView
        android:id="@+id/gameIconIv"
        android:scaleType="fitXY"
        android:src="@drawable/cmgame_sdk_default_loading_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/onlineNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10101人在玩"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/gameIconIv"/>

    <TextView
        android:id="@+id/gameNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp"
        android:text="滚动的天空"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/onlineNumTv"/>

</RelativeLayout>