<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_member_coupon"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/uc_default_activity_background_color"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.gionee.gnservice.widget.fresh.TwinklingRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/swipe_layout_member_coupon">
            <ListView
                    android:paddingTop="8dp"
                    android:id="@+id/recyleview_member_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/uc_default_activity_content_background_color"
                    android:visibility="gone"/>

        </com.gionee.gnservice.widget.fresh.TwinklingRefreshLayout>
        <ProgressBar
                android:id="@+id/progress_member_coupon_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/layout_member_coupon_empty"
            android:visibility="gone">
        <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/uc_ic_member_coupon_empty"
                android:scaleType="center"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:id="@+id/uc_txt_member_coupon_empty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#33000000"
                android:layout_gravity="center_horizontal"
                android:text="@string/uc_txt_member_coupon_empty"/>
    </LinearLayout>

</LinearLayout>