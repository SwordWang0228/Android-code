<?xml version="1.0" encoding="utf-8"?>
<com.gionee.sadsdk.detail.view.WaitingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/as_wait_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/wait_view_bg_color"
     >

    <com.gionee.sadsdk.detail.view.BallScaleProgress
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/as_wait_textview_top_margin"
        android:text="@string/loading"
        android:textColor="@color/zkas_font_color_assistant"
        android:textSize="@dimen/as_wait_view_text_size" />
    
</com.gionee.sadsdk.detail.view.WaitingView>