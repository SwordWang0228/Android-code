<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/book_icon"
        android:layout_width="71dp"
        android:layout_height="101dp"
        android:src="@drawable/book_default_bg"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:layout_toRightOf="@+id/book_icon"
        android:layout_width="match_parent"
        android:layout_height="101dp">
        <TextView
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/book_tab"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/score" />
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/book_score"
            android:letterSpacing="0.02"
            tools:text="9.8åˆ†"
            />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/book_info"
            android:layout_below="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/book_info"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="10sp"
            tools:text="dfsdf"
            android:layout_toLeftOf="@+id/book_type"
            android:textColor="@color/book_authour"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:id="@+id/book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="9sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/book_type"
            android:background="@drawable/textview_bg"/>
    </RelativeLayout>

</RelativeLayout>
