<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smgame_sdk_bg_common_dialog">

    <ImageView
        android:id="@+id/iv_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cmgame_sdk_icon_dialog_close"
        android:scaleType="centerInside"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/cmgame_sdk_icon_quit_game"
        android:drawablePadding="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/cmgame_sdk_label_confirm_quit_game"
        android:textColor="#FF222222"
        android:textSize="19dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_recommend_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="24dp"
        android:text="@string/cmgame_sdk_label_game_recommend"
        android:textColor="#FF888888"
        android:textSize="12sp"/>
    
    <FrameLayout
        android:id="@+id/game_recommend_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cmgame_sdk_label_cancel"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:background="@drawable/cmgame_sdk_bg_quit_cancel_selector"
            />
        <TextView
            android:id="@+id/tv_quit_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cmgame_sdk_label_quit_confirm"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:background="@drawable/cmgame_sdk_bg_quit_confirm_selector"
            />
    </LinearLayout>
</LinearLayout>