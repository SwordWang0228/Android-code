<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/refresh_notify_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:visibility="gone">

            <com.cmcm.cmgame.misc.view.RefreshNotifyView
                android:id="@+id/refresh_notify_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.cmcm.cmgame.misc.view.RefreshNotifyView>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/web_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivGameLoading"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true" />

        <View
            android:id="@+id/coverLayer"
            android:background="#4B000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/loading_native_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B000000"/>

        <LinearLayout
            android:id="@+id/idLoadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/loading_progressbar"
                android:layout_width="150dp"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/bg_loading_progress"
                style="?android:attr/progressBarStyleHorizontal"/>

            <TextView
                android:layout_marginTop="12dp"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"
                android:id="@+id/text_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="9dp"
                android:id="@+id/txProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/cmgame_sdk_icon_game_in_back"
        android:visibility="gone"/>

    <Button
        android:id="@+id/right_back_btn"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/cmgame_sdk_h5_close_right_circle"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="80.5dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10.5dp"
        android:background="@drawable/cmgame_sdk_h5_game_refresh_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cmgame_sdk_h5_refresh" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:background="#FFFFFF" />

        <ImageView
            android:id="@+id/close_button_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cmgame_sdk_h5_close_button_new" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.cmcm.cmgame.view.GameMoveView
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ad_layout"/>

    <include
        android:id="@+id/image_ad_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/cmgame_sdk_interaction_ad_layout"/>

    <include
        android:id="@+id/image_ad_root2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/cmgame_sdk_interaction_ad_layout"/>
</RelativeLayout>