<?xml version="1.0" encoding="utf-8"?>
<com.gionee.feedback.ui.ReplyInfoItem
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:paddingTop="@dimen/gn_fb_dimen_replyitem_paddingtop">

    <View
            android:id="@+id/gn_fb_id_replyviewline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gb_fb_color_record_timeline"/>

    <com.gionee.feedback.ui.ExpandableTextView
            android:id="@+id/gn_fb_id_replycontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gn_fb_id_replyviewline"
            android:layout_marginTop="@dimen/gn_fb_dimen_replycontent_margintop"
            android:paddingRight="@dimen/gn_fb_dimen_replycontent_paddingright"/>

    <RelativeLayout
            android:id="@+id/gn_fb_id_replylayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gn_fb_id_replycontent"
            android:layout_marginTop="@dimen/gn_fb_dimen_replylayout_margintop"
            android:paddingLeft="@dimen/gn_fb_dimen_replylayout_paddingleft"
            android:paddingRight="@dimen/gn_fb_dimen_replylayout_paddingright"
            android:layout_marginBottom="-2dp">

        <amigo.widget.AmigoTextView
                android:id="@+id/gn_fb_id_replydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/gn_fb_drawable_time"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/gn_fb_color_senddate_text"
                android:textSize="@dimen/gn_fb_dimen_replydate_textsize"/>

        <ImageView
                android:id="@+id/gn_fb_id_new_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gn_fb_drawable_feedback"
                android:background="?android:attr/actionBarItemBackground"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
    </RelativeLayout>

</com.gionee.feedback.ui.ReplyInfoItem>