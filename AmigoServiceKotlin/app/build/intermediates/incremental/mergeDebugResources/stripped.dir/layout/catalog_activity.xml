<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/book_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="17dp"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@drawable/toolbar_back"
            />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/book_back"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="@string/book_classification_title_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/category_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="#2a90ef"
            android:letterSpacing="0.03"
            android:gravity="center"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/nb_read_deorder"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/hot_search_color"/>
    <ListView
        android:id="@+id/book_catalog_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="none"
        />

</LinearLayout>