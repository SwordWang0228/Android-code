<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:minHeight="@dimen/gn_account_mts_service_outlets_city_item_height"
    android:paddingLeft="@dimen/gn_account_mts_service_outlets_city_padding_lr" >

    <TextView
        android:id="@+id/mts_service_outlets_city_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/gn_account_mts_service_outlets_city_item_color"
        android:textSize="@dimen/gn_account_mts_service_outlets_city_item_size" />

    <ImageView
        android:id="@+id/mts_service_outlets_city_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gn_account_arrows_right" />

</RelativeLayout>
