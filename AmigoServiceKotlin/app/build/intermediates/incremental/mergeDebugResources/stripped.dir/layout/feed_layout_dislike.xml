<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/feed_shape_dislike_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="?attr/text_title"
        android:text="@string/select_reason"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_reason1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <TextView
                style="@style/text_popup_not_interest"
                android:clickable="false"
                android:drawableLeft="@mipmap/feed_fkxx_icon"
                android:drawablePadding="4dp"
                android:gravity="start"
                android:text="@string/not_instrest" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_reason2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <TextView
                style="@style/text_popup_not_interest"
                android:clickable="false"
                android:drawableLeft="@mipmap/feed_fkxx_icon"
                android:drawablePadding="4dp"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/feedback_content_spam" />

            <TextView
                style="@style/text_popup_not_interest_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:clickable="false"
                android:drawableRight="@mipmap/feed_dislike_more_icon"
                android:drawablePadding="0dp"
                android:maxLines="1"
                android:text="@string/as_title_party"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_reason3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <TextView
                style="@style/text_popup_not_interest"
                android:clickable="false"
                android:drawableLeft="@mipmap/feed_fkxx_icon"
                android:drawablePadding="4dp"
                android:gravity="start"
                android:text="@string/blackauthor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_reason4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <TextView
                style="@style/text_popup_not_interest"
                android:clickable="false"
                android:drawableLeft="@mipmap/feed_pbnr_icon"
                android:drawablePadding="4dp"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/shield_relevant_content" />

            <TextView
                android:id="@+id/tv_more4"
                style="@style/text_popup_not_interest_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:clickable="false"
                android:drawableRight="@mipmap/feed_dislike_more_icon"
                android:drawablePadding="0dp"
                android:maxLines="1"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
