<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/whites">

    <android.support.design.widget.TabLayout
        android:id="@+id/book_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:tabTextColor="@color/tab_unselect_text_color"
        app:tabSelectedTextColor="@color/book_title_nor"
        app:tabIndicatorColor="@color/book_tab_blue"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:tabIndicatorHeight="0dp"/>
    <View
        android:id="@+id/book_line"
        android:layout_below="@+id/book_tab"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/book_line"
        />
    <com.android.droi.books.ui.view.MyViewPager
        android:layout_below="@+id/book_line"
        android:id="@+id/book_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_below="@+id/book_line"
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/whites">
        <ImageView
            android:layout_above="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_network"/>
        <Button
            android:id="@+id/refresh"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/network_failed"
            android:text="@string/no_network_msg"
            android:background="@color/transparent"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bot_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/whites">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/hot_search_color"/>
        <ImageView
            android:id="@+id/bot_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.7dp"
            android:layout_width="50dp"
            android:layout_height="41dp"
            android:layout_marginRight="8.7dp"
            android:src="@drawable/book_default_bg"/>

        <LinearLayout
            android:layout_toRightOf="@+id/bot_img"
            android:layout_toLeftOf="@+id/bot_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.7sp"
                android:textColor="#000000"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="5.5sp"
                tools:text="热料小说"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/bot_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.7sp"
                android:textColor="#343434"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="热料小说"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/bot_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.3dp"
            android:background="@drawable/textview_bg_red"
            android:textColor="@color/whites"
            android:layout_marginRight="11.7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>