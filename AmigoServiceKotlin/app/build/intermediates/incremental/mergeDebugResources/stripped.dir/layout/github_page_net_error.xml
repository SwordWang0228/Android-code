<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/retry_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_net_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/img_net_error" />

    <TextView
        android:id="@+id/text_error_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13sp"
        android:text="@string/net_unavailable_detail"
        android:textColor="@color/color_999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/click_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/click_retry"
        android:textColor="@color/color_3697FF"
        android:textSize="15sp" />
</LinearLayout>

