<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/hot_selection_relative"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/hot_selection_imageview"
        android:layout_width="71.7dp"
        android:layout_height="105dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/book_default_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_toRightOf="@+id/hot_selection_imageview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hot_selection_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:letterSpacing="0.03"
            android:text="@string/category_sub_recommend_view_all_text"
            android:textColor="#1e252f"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/hot_selection_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.03"
            android:maxLines="2"
            android:text="@string/category_sub_recommend_view_all_text"
            android:textColor="#545c67"
            android:textSize="13.3sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >

            <TextView
                android:id="@+id/hot_selection_author_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14.9dp"
                android:letterSpacing="0.03"
                android:text="@string/category_sub_recommend_view_all_text"
                android:textColor="#939aa2"
                android:textSize="10.7sp"
                />

            <TextView
                android:id="@+id/hot_selection_categoryname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/textview_bg"
                android:letterSpacing="0.03"
                android:text="@string/category_sub_recommend_view_all_text"
                android:textColor="#949ba5"
                android:textSize="10sp"
                />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>