<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/reco_icon"
        android:layout_width="72dp"
        android:layout_height="102dp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_below="@+id/reco_icon"
        android:layout_marginTop="5dp"
        android:id="@+id/reco_text"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="13.3sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/book_tab"/>
    <TextView
        android:layout_below="@+id/reco_text"
        android:id="@+id/popularity"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/nb_text_category_content"
        android:letterSpacing="0.02"
        android:text="203万人气值"
        />
</RelativeLayout>
