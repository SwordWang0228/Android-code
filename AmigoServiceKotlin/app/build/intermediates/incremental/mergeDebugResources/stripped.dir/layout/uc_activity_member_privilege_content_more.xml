<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#fafafa"
    android:id="@+id/layout_member_privilege_content_more">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_member_privilege_content_more_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/uc_ic_member_privilege_content_item_icon_default"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_member_privilege_content_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#33000000"
            android:textSize="16sp" />

        <View
            android:layout_width="174dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#33808080" />

        <TextView
            android:id="@+id/txt_member_privilege_content_more_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#33000000"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>