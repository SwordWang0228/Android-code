<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">
    <include android:id="@+id/title_lay" layout="@layout/book_title_layout"/>
    <RelativeLayout
        android:id="@+id/book_self_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_above="@+id/book_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/book_tab"
                        android:letterSpacing="0.03"
                        android:padding="15dp"
                        android:gravity="center"
                        android:text="@string/book_bookcase" />
                    <TextView
                        android:id="@+id/edit_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/book_tab_blue"
                        android:letterSpacing="0.03"
                        android:text="@string/book_self_edit"
                        android:gravity="center_vertical|right"
                        android:padding="15dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/book_self_null"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#acacb9"
                    android:visibility="gone"
                    android:text="@string/book_self_null"/>

                <com.android.droi.books.ui.view.MyGridView
                    android:layout_below="@+id/book_line"
                    android:id="@+id/bookself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:verticalSpacing="15dp"
                    android:gravity="center"
                    android:stretchMode="columnWidth"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:listSelector="@android:color/transparent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f8f8fb"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:paddingTop="20dp"
                        android:paddingBottom="23dp"
                        android:id="@+id/book_self_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="@string/book_self_reco"
                        android:textColor="@color/book_tab"/>
                    <LinearLayout
                        android:id="@+id/type_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:id="@+id/book_self_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/book_tab_blue"
                            android:text="@string/hot_search_change_text"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginLeft="4.7dp"
                            android:id="@+id/book_self_type_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/type_2"/>
                    </LinearLayout>
                </RelativeLayout>

                <com.android.droi.books.ui.view.MyGridView
                    android:id="@+id/book_self_reco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:numColumns="3"
                    android:gravity="center"
                    android:verticalSpacing="22dp"
                    android:stretchMode="columnWidth"
                    android:listSelector="@android:color/transparent"
                    android:paddingBottom="20dp"/>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/book_remove"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <View
                android:id="@+id/book_btm_lime"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/hot_search_color"/>
            <TextView
                android:layout_below="@+id/book_btm_lime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#2a90ef"
                android:gravity="center"
                android:text="@string/book_self_delete"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>