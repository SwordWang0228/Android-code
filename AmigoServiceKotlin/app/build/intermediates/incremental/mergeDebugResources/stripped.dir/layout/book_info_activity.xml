<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites">
    <include android:id="@+id/title_lay" layout="@layout/book_title_layout" android:visibility="gone"/>
    <ScrollView
        android:layout_below="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/book_info_lay"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="fitXY"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="#8C000000"/>
            <RelativeLayout
                android:id="@+id/book_info_layout"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/title_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/book_info_back"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/book_info_back"/>
                    <ImageView
                        android:id="@+id/book_info_search"
                        android:paddingRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/back_info_search"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <ImageView
                    android:layout_below="@+id/title_layout_1"
                    android:id="@+id/book_icon"
                    android:layout_width="76dp"
                    android:layout_height="108.3dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="33.6dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/book_default_bg" />

                <RelativeLayout
                    android:layout_below="@+id/title_layout_1"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/book_icon"
                    android:layout_height="134dp"
                    android:paddingLeft="36dp">

                    <TextView
                        android:id="@+id/book_name"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whites"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="18.7sp"
                        tools:text="s是的发烧发大水的发烧"/>

                    <TextView
                        android:id="@+id/book_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/book_state"
                        android:textColor="@color/whites"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="s是的发烧发大水的发烧的舒服舒服舒服的fsfsdfsdfsfsdf"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/book_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/book_type"
                        android:ellipsize="end"
                        android:maxLines="2"
                        tools:text="s是的发"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/book_info_state"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/book_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/book_type"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/book_state"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="s是的发"
                        android:textColor="@color/whites"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/book_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_bg_blue"
                        android:textColor="@color/whites"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="s是的发烧发大水的发烧的舒服舒服舒服的"
                        android:textSize="10sp" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_below="@+id/book_info_layout"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="80dp"
                android:background="@color/whites"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18.3sp"
                            android:textColor="@color/book_tab" />
                        <TextView
                            android:id="@+id/popularity_unit"
                            android:layout_toRightOf="@+id/popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10.5sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/book_tab" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#949ba5"
                        android:letterSpacing="0.02"
                        android:text="人气值"
                        />
                </LinearLayout>
                <View
                    android:layout_above="@+id/btn_lay"
                    android:layout_width="0.3dp"
                    android:layout_height="32dp"
                    android:background="@color/book_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18.3sp"
                            android:textColor="@color/book_tab" />
                        <TextView
                            android:layout_toRightOf="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10.5sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/book_tab" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#949ba5"
                        android:letterSpacing="0.02"
                        android:text="评分"
                        />
                </LinearLayout>
                <View
                    android:layout_above="@+id/btn_lay"
                    android:layout_width="0.3dp"
                    android:layout_height="32dp"
                    android:background="@color/book_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18.3sp"
                            android:textColor="@color/book_tab"/>
                        <TextView
                            android:layout_toRightOf="@+id/online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10.5sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/book_tab"
                            android:text=" 人"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#949ba5"
                        android:letterSpacing="0.02"
                        android:text="同时在线人数"
                        />
                </LinearLayout>
            </LinearLayout>
            
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/recommended_language_layout"
                android:layout_below="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recommended_language"
                android:layout_marginBottom="18dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginLeft="7.7dp"
                    android:layout_marginTop="11.3dp"
                    android:layout_marginRight="7.7dp"
                    android:layout_marginBottom="8dp"
                    android:background="#f5f1eb">
                    <ImageView
                        android:id="@+id/reco_img"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reco_img"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/recommended_language"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/reco_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12.5sp"
                        android:textColor="#d8bc9c"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="写《一个人的好天气》时"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/recommended_language_layout"
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/whites"
                android:paddingBottom="8dp">
                <TextView
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/book_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/tab_unselect_text_color"
                    android:textSize="13.3sp"/>

                <ImageView
                    android:id="@+id/more_info"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_info"/>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="13dp"
                android:layout_below="@+id/description_layout"
                android:id="@+id/keyword_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
            </LinearLayout>

            <View
                android:id="@+id/book_info_line"
                android:layout_below="@+id/keyword_layout"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/hot_search_color"/>

            <RelativeLayout
                android:layout_below="@+id/book_info_line"
                android:id="@+id/book_catalog_lay"
                android:layout_width="match_parent"
                android:background="@color/whites"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_height="46dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/book_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1e252f"
                    android:letterSpacing="0.02"
                    android:text="@string/book_catalog"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/book_catalog_size"
                    android:paddingLeft="13dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/book_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/book_type"
                    android:letterSpacing="0.03"
                    />

                <TextView
                    android:id="@+id/book_catalog_state"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_more_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="#ffa60a"
                    android:letterSpacing="0.03"
                    tools:text="已完结"
                    />
                <ImageView
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:id="@+id/img_more_catalog"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_catalog"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/book_catalog_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ad_layout_new">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#f1f1f6"/>

                <ImageView
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10.7dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/ad_img"
                    android:layout_width="98dp"
                    android:layout_height="82dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10.7dp"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_toRightOf="@+id/ad_img">
                    <TextView
                        android:id="@+id/ad_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.3dp"
                        android:letterSpacing="0.03"
                        android:maxLines="2"
                        android:text="@string/category_sub_recommend_view_all_text"
                        android:textSize="14.3sp"
                        android:textColor="#545c67"
                        />

                    <TextView
                        android:id="@+id/all_book_ads_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/ads_bg"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="14.3dp"
                        android:text="@string/ads_text"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        />

                    <TextView
                        android:id="@+id/ad_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/all_book_ads_new"
                        android:paddingLeft="5dp"
                        android:letterSpacing="0.03"
                        android:text="网易考拉"
                        android:layout_toLeftOf="@+id/ad_close"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:id="@+id/ad_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="17dp"
                        android:src="@drawable/ads_close"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/book_info_line_2"
                android:layout_below="@+id/ad_layout_new"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f1f1f6"/>

            <RelativeLayout
                android:id="@+id/reco_title_layout"
                android:layout_below="@+id/book_info_line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">
                <TextView
                    android:paddingTop="20dp"
                    android:id="@+id/reco_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#1e252f"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:text="@string/book_info_reco"
                    />

                <TextView
                    android:id="@+id/reco_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="20dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    android:text="@string/hot_search_change_text"
                    android:textColor="#2a90ef"
                    android:textSize="14sp" />
            </RelativeLayout>

            <com.android.droi.books.ui.view.MyListView
                android:layout_below="@+id/reco_title_layout"
                android:id="@+id/reco_book_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/version_info"
                android:layout_below="@+id/reco_book_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="#a0a7b2"
                android:letterSpacing="0.02"
                android:paddingTop="30dp"
                android:paddingBottom="80dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                />
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bot_layout"
        android:layout_above="@+id/book_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whites"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/hot_search_color"/>
        <ImageView
            android:id="@+id/bot_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.7dp"
            android:layout_width="50dp"
            android:layout_height="41dp"
            android:layout_marginRight="8.7dp"
            android:src="@drawable/book_default_bg"/>

        <LinearLayout
            android:layout_toRightOf="@+id/bot_img"
            android:layout_toLeftOf="@+id/bot_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.7sp"
                android:textColor="#000000"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="5.5sp"
                android:text="热料小说"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/bot_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.7sp"
                android:textColor="#343434"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/bot_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.3dp"
            android:background="@drawable/textview_bg_red"
            android:textColor="@color/whites"
            android:layout_marginRight="11.7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp" />
    </RelativeLayout>
    <View
        android:id="@+id/book_line"
        android:layout_above="@+id/btn_lay"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/book_line"
        />
    <LinearLayout
        android:id="@+id/btn_lay"
        android:layout_width="match_parent"
        android:layout_height="48.3dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/book_bookcase"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/book_bookcase"
            android:gravity="center"
            android:background="@color/whites"
            android:textColor="@color/book_tab_blue"
            android:textSize="15sp" />
        <View
            android:layout_above="@+id/btn_lay"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/book_line"
            />
        <TextView
            android:id="@+id/add_bookself"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_bookcase"
            android:textColor="@color/book_tab_blue"
            android:background="@color/whites"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/read_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/book_tab_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/reader"
            android:textSize="15sp"
            android:textColor="@color/whites" />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/title_lay"
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whites"
        android:visibility="gone">
        <ImageView
            android:layout_above="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_network"/>
        <Button
            android:id="@+id/refresh"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/network_failed"
            android:text="@string/no_network_msg"
            android:background="@color/transparent"/>
    </RelativeLayout>
</RelativeLayout>