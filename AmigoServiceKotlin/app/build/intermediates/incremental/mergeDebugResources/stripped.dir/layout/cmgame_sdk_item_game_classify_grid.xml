<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gameIconIv"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/cmgame_sdk_default_loading_game"
        android:maxHeight="300dp"
        android:maxWidth="200dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/onlineNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10101人在玩"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/gameIconIv"/>

    <TextView
        android:id="@+id/gameNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:maxLines="1"
        android:text="滚动的天空"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/onlineNumTv"/>

    <ImageView
        android:id="@+id/tipsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cmgame_sdk_game_last_play_tip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>