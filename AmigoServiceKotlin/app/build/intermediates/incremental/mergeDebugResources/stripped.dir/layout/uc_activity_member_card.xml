<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_member_card"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--个人资料-->
    <LinearLayout
            android:id="@+id/llayout_member_card_user"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:paddingTop="74dp"
            android:layout_gravity="center_vertical"
            android:gravity="bottom"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/rlayout_member_card_user_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/uc_bg_member_card_user_photo">

            <com.gionee.gnservice.widget.RoundImageView
                    android:id="@+id/img_member_card_user_photo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/rlayout_member_card_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txt_member_card_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cfae61"
                        android:textSize="20dp"/>

                <ImageView
                        android:id="@+id/img_member_card_user_level_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/uc_ic_member_card_mark_gold"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/txt_member_card_see_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uc_txt_member_card_see_user_info"
                    android:textColor="#fafafa"
                    android:textSize="14dp"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/img_member_card_user_info_goto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/uc_ic_member_card_user_info_goto"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:layout_marginRight="14dp"/>
    </LinearLayout>

    <com.gionee.gnservice.widget.fresh.TwinklingRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/refresh_member_card">

        <!--菜单-->
        <LinearLayout
                android:id="@+id/layout_member_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/uc_default_activity_background_color">


            <LinearLayout
                    android:id="@+id/layout_member_card_menu_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/uc_default_activity_content_background_color">
                <ListView
                        android:id="@+id/list_member_card_menu_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67dp"
                        android:background="@color/uc_default_line_color"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_member_card_menu_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:background="@color/uc_default_activity_content_background_color">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67dp"
                        android:background="@color/uc_default_line_color"/>
                <ListView
                        android:id="@+id/list_member_card_menu_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67dp"
                        android:background="@color/uc_default_line_color"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layout_member_card_menu_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:background="@color/uc_default_activity_content_background_color">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67dp"
                        android:background="@color/uc_default_line_color"/>
                <ListView
                        android:id="@+id/list_member_card_menu_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.67dp"
                        android:background="@color/uc_default_line_color"/>
            </LinearLayout>
        </LinearLayout>
    </com.gionee.gnservice.widget.fresh.TwinklingRefreshLayout>
</LinearLayout>