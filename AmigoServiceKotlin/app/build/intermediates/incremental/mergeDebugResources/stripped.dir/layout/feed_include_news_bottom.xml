<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="17dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="10dp">

    <com.hs.uikit.BorderTextView
        android:id="@+id/tv_tag"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:paddingBottom="1dp"
        android:gravity="center"
        android:text="@string/to_top"
        android:textColor="@color/color_F96B6B"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_author"
        style="@style/news_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_tag"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_comment_num"
        style="@style/news_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tv_author"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/news_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/tv_comment_num"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/tv_remove"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/tv_time"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end|center_vertical">

        <ImageView
            android:id="@+id/tv_remove_img"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:background="@mipmap/feed_close_icon_dislike" />
    </LinearLayout>

</RelativeLayout>