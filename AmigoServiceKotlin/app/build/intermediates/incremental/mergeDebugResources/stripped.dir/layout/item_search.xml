<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.android.droi.books.ui.view.ClearEditText
        android:id="@+id/filter_edit"
        android:paddingLeft="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="fill_parent"
        android:layout_height="28.7dp"
        android:drawableLeft="@drawable/wh_search_bar_icon_normal"
        android:drawablePadding="8dp"
        android:hint="@string/hot_search_hint_text"
        android:textColorHint="@color/book_tab"
        android:singleLine="true"
        android:textSize="15sp"
        android:background="@drawable/search_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</LinearLayout>