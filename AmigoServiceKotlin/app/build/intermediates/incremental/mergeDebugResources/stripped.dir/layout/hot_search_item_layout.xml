<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="20dp">
    <RelativeLayout
        android:id="@+id/hot_search_relative"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/hot_first_bg">
        <TextView
            android:id="@+id/hot_search_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9.3sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.03"
            android:layout_centerInParent="true"
            android:text="1"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/hot_search_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#1e252f"
        android:letterSpacing="0.03"
        android:layout_toRightOf="@+id/hot_search_relative"
        android:text="@string/search"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>