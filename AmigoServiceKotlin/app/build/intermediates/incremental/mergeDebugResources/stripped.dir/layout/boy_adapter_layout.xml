<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="164dp"
        android:layout_height="114dp"
        android:background="@drawable/category_background">
        <RelativeLayout
            android:id="@+id/boy_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/catalog">
            <TextView
                android:id="@+id/boy_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="#1e252f"/>
            <ImageView
                android:id="@+id/boy_imageview"
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/book_default_bg"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/catalog"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.7sp"
            android:textColor="#606b7a"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:paddingBottom="13dp"
            android:text="商战职场/都市异能/热血青春"
            android:singleLine="true"
            android:ellipsize="end"/>
    </RelativeLayout>
</RelativeLayout>