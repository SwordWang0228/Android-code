<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_ad_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30343d"
    android:visibility="gone">

    <ImageView
        android:id="@+id/image_view_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/old_interaction_ad_logo"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_ad"
        android:layout_marginTop="90.5dp"
        android:src="@drawable/cmgame_sdk_pan_bg" />

    <RelativeLayout
        android:id="@+id/close_button_area"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="17.5dp"
            android:src="@drawable/cmgame_sdk_pan_close_top"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_ad"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_below="@id/image_view_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_ad"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_title"
        android:layout_marginStart="64.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="64.5dp"
        android:gravity="center"
        android:textColor="#C0C4CA"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_ad_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/cmgame_sdk_pan_download_button"
        android:textColor="#30343D"
        android:textSize="18sp"
        android:text="@string/cmgame_sdk_pan_ad_button_download"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_ad_detail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/text_ad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42.5dp"
        android:background="@drawable/cmgame_sdk_pan_detail_bg"
        android:textColor="#30343D"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/cmgame_sdk_ad_logo_new" />

</RelativeLayout>
