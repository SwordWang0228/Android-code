<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/feed_shape_dislike_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/webview_title_height">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/feed_selector_back"
                android:paddingLeft="10dp"
                android:scaleType="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/iv_back"
                android:textColor="?attr/text_title"
                android:text="@string/feed_back"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            style="@style/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/feed_select"
            android:textColor="?attr/text_title"
            android:textSize="16sp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_reason1"
            style="@style/text_popup_not_interest_more"
            android:layout_gravity="center"
            android:text="@string/feed_sexy"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reason2"
            style="@style/text_popup_not_interest_more"
            android:layout_gravity="center"
            android:text="@string/title_party"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reason3"
            style="@style/text_popup_not_interest_more"
            android:layout_gravity="center"
            android:text="@string/content_error"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reason4"
            style="@style/text_popup_not_interest_more"
            android:layout_gravity="center"
            android:text="@string/content_duplicate"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_reason5"
            style="@style/text_popup_not_interest_more"
            android:layout_gravity="center"
            android:text="@string/content_spam"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
