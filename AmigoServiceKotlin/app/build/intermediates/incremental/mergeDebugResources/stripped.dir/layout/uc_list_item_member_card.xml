<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/rlayout_member_card_user_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_list_item_member_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="center"/>

        <TextView
                android:id="@+id/txt_list_item_member_card_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#cc000000"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/txt_list_item_member_card_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#66000000"
                android:textSize="12dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:src="@drawable/uc_ic_member_card_list_item_goto"
                android:scaleType="center"/>
    </LinearLayout>

    <View
            android:id="@+id/view_list_item_member_card_line"
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginLeft="72dp"
            android:background="#33828282"/>

</LinearLayout>