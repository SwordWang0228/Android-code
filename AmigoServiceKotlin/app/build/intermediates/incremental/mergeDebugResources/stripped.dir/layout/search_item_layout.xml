<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/search_relative"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/search_imageview"
        android:layout_width="72dp"
        android:layout_height="102dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/book_default_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_toRightOf="@+id/search_imageview">

        <TextView
            android:id="@+id/search_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:letterSpacing="0.03"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#1e252f"
            android:layout_toLeftOf="@+id/score"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/book_score"
            android:letterSpacing="0.02"
            tools:text="9.8åˆ†"
            />

        <TextView
            android:layout_below="@+id/search_title_textview"
            android:id="@+id/search_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.03"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="13.3sp"
            android:textColor="#545c67"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >

            <TextView
                android:id="@+id/search_author_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14.9dp"
                android:letterSpacing="0.03"
                tools:text="sdfsdfsdfsasfsfsfsfsfsdfsdfsdfsdfsdfsdfsfd"
                android:textSize="10.7sp"
                android:textColor="#939aa2"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/search_categoryname_textview"
                />

            <TextView
                android:id="@+id/search_categoryname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/textview_bg"
                android:letterSpacing="0.03"
                tools:text="sdfsdfsdfsasfsfsdfsdfsdfsdfsdfsfsdfsfsdfsfsfsfsafsdf"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#949ba5"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>