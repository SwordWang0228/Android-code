<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookself_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/book_icon"
        android:layout_width="94dp"
        android:layout_height="134dp"
        android:src="@drawable/book_default_bg"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:id="@+id/book_check"
        android:layout_width="94dp"
        android:layout_height="134dp">
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/book_check_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_checkmark_default"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/book_self_reco"
        android:layout_width="94dp"
        android:layout_height="134dp">
        <ImageView
            android:id="@+id/book_self_reco_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_self_reco"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/book_icon"
        android:layout_width="94dp"
        android:layout_height="60dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/book_name"
            android:paddingTop="5dp"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1e252f"
            android:maxLines="2"
            android:ellipsize="end"/>
        <RelativeLayout
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_name"
            android:paddingTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/book_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.7sp"
                android:textColor="#949ba5"
                android:lineSpacingExtra="5.3sp"
                />
            <ImageView
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/book_chapter"
                android:layout_toEndOf="@+id/book_chapter"
                android:id="@+id/unread"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/circle_shape"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
