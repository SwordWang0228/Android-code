<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bcad_dialog_normal_margin_bottom"
    android:layout_marginLeft="@dimen/bcad_dialog_normal_margin_left_right"
    android:layout_marginRight="@dimen/bcad_dialog_normal_margin_left_right"
    android:background="@drawable/bcad_dialog_translucent_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_normal_title"
        style="@style/bcad_TitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bcad_dialog_normal_title_height"
        android:layout_marginLeft="@dimen/bcad_layout_margin"
        android:layout_marginRight="@dimen/bcad_layout_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/bcad_dialog_normal_title"
        android:textSize="@dimen/bcad_dialog_normal_title_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bcad_dividing_height"
        android:background="@color/bcad_dividing" />

    <TextView
        android:id="@+id/dialog_normal_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bcad_dialog_normal_content_margin_top_bottom"
        android:layout_marginLeft="@dimen/bcad_layout_margin"
        android:layout_marginRight="@dimen/bcad_layout_margin"
        android:layout_marginTop="@dimen/bcad_dialog_normal_content_margin_top_bottom"
        android:textColor="@color/bcad_dialog_normal_content"
        android:textSize="@dimen/bcad_dialog_normal_content_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bcad_dividing_height"
        android:background="@color/bcad_dividing" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bcad_dialog_normal_button_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_normal_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/bcad_dialog_normal_cancel"
            android:textSize="@dimen/bcad_dialog_normal_button_text_size" />

        <View
            android:layout_width="@dimen/bcad_dividing_height"
            android:layout_height="@dimen/bcad_dialog_normal_dividing_height"
            android:background="@color/bcad_dividing" />

        <Button
            android:id="@+id/dialog_normal_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/bcad_dialog_normal_ok"
            android:textSize="@dimen/bcad_dialog_normal_button_text_size" />
    </LinearLayout>

</LinearLayout>