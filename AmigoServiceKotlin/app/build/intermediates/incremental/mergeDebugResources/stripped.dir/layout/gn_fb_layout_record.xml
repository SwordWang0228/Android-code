<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

    <View
            android:id="@+id/gn_fb_id_timeline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/gn_fb_dimen_recordlayout_margin"
            android:background="@color/gb_fb_color_record_timeline"/>
    <amigo.widget.AmigoListView
            android:id="@+id/gn_fb_id_recordlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/gn_fb_dimen_recordList_marginLeft"
            android:layout_marginRight="@dimen/gn_fb_dimen_recordlayout_margin"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:scrollbars="none"/>
    <TextView
            android:id="@+id/gn_fb_id_recordempty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/gn_fb_string_recordempty"
            android:textSize="@dimen/gn_fb_dimen_recordempty_textsize"
            android:textColor="@color/gn_fb_color_no_feedback"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/gn_fb_drawable_empty"/>

</RelativeLayout>