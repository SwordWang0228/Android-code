<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:amigo="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_member_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/uc_default_activity_background_color">

    <Button
            android:id="@+id/btn_member_setting_change_account"
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/uc_btn_member_setting_change_account"
            android:textColor="#cc000000"
            android:textSize="16sp"/>

    <LinearLayout
            android:id="@+id/layout_member_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/uc_layout_member_setting_color">

        <amigoui.widget.AmigoListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>