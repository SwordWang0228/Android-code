<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/refresh_notify_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/refresh_notify_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/refresh_notify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#FF222222"
        android:textSize="18sp" />

    <Button
        android:id="@+id/refresh_notify_btn"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/cmgame_sdk_data_fail_btn_text"
        android:textColor="#FF222222"
        android:textSize="16sp"
        android:background="@drawable/cmgame_sdk_bg_game_load_fail_yellow_bt"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cmgame_sdk_game_load_fail_hit_bottom_txt"
        android:textColor="#FF888888"
        android:textSize="14sp"
        />
</LinearLayout>