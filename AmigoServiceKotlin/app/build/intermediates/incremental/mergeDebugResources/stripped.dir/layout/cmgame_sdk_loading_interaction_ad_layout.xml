<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading_ad_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ad_image_lay"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="-47dp">
        <ImageView
            android:id="@+id/image_view_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ad_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom" />

        <TextView
            android:id="@+id/auto_close_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:paddingLeft="8dp"
            android:paddingTop="6.5dp"
            android:paddingRight="7.5dp"
            android:paddingBottom="6.5dp"
            android:background="@drawable/bg_ad_close"
            android:gravity="center"
            android:text="@string/business_interstitial_countdown_pattern"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/cmgame_sdk_ad_logo_new" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ad_title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:text="广告标题"/>

        <TextView
            android:id="@+id/ad_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:singleLine="true"
            tools:text="广告描述"/>
    </LinearLayout>

</LinearLayout>
