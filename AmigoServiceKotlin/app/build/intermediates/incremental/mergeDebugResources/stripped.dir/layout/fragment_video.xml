            android:layout_width="match_parent"
            android:layout_height="match_parent" android:tag="layout/fragment_video_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/white"
                android:paddingBottom="6dp"
                android:elevation="1dp"
                android:translationZ="1dp"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@color/color_press"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="4dp"
                app:tabMode="scrollable"/>

        <android.support.v4.view.ViewPager
                android:id="@+id/vp_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="46dp"/>


    </FrameLayout>
         