<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <declare-styleable name="ImageViewRound">
        <attr name="layout_mode">
            <enum name="circle" value="0"/>
            <enum name="round" value="1"/>
            <enum name="oval" value="2"/>
        </attr>
        <attr format="float" name="radius"/>
    </declare-styleable>
    <declare-styleable name="ItemNotificationView">
        <attr format="string" name="notification_text"/>
        <attr format="color" name="notification_color"/>
        <attr format="color" name="notification_text_color"/>
        <attr format="dimension" name="notification_text_size"/>
    </declare-styleable>
    <declare-styleable name="MZBannerView">
        <attr format="boolean" name="open_mz_mode"/>
        <attr format="boolean" name="canLoop"/>
        <attr format="dimension" name="indicatorPaddingLeft"/>
        <attr format="dimension" name="indicatorPaddingRight"/>
        <attr name="indicatorAlign">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="MarqueeView">
        <attr format="reference" name="left_drawable"/>
        <attr format="color" name="font_color"/>
        <attr format="dimension" name="font_size"/>
    </declare-styleable>
    <declare-styleable name="StatusLayout">
        <attr format="reference" name="layout_loading"/>
        <attr format="reference" name="layout_empty"/>
        <attr format="reference" name="layout_error"/>
        <attr format="reference" name="layout_network"/>
    </declare-styleable>
    <dimen name="default_footer">48dp</dimen>
    <dimen name="default_height">48dp</dimen>
    <dimen name="design_bottom_navigation_active_text_size" ns1:override="true">12sp</dimen>
    <dimen name="design_bottom_navigation_text_size" ns1:override="true">12sp</dimen>
    <item name="cb_item_tag" type="id"/>
    <item name="rl_login_password" type="id"/>
    <item name="rl_login_proving" type="id"/>
    <string name="bottom_sheet_behavior">android.support.design.widget.BottomSheetBehavior</string>
    <string name="lee_load_end">没有更多了</string>
    <string name="lee_load_error">加载失败点击重试</string>
    <string name="lee_load_more">正在加载…</string>
    <string name="load_completed">加载完成</string>
    <string name="load_more">加载更多</string>
    <string name="loading">正在加载…</string>
    <string name="refresh_completed">刷新完成</string>
    <string name="refresh_drag">下拉刷新</string>
    <string name="refresh_release">释放立即刷新</string>
    <string name="refreshing">正在刷新…</string>
    <string name="str_loading_empty">empty data .</string>
    <string name="str_loading_error">加载失败点击重试…</string>
    <string name="str_not_more">没有更多了</string>
    <string name="str_not_network">暂无网络点击重试…</string>
    <string name="str_restart">重试</string>
    <style name="AppTheme.Animation" parent="@android:style/Animation.Activity">
        <!--A->B  B-in(animation)-->
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <!--A->B  A-out(animation)-->
        <item name="android:activityOpenExitAnimation">@anim/right_out</item>
        <!--A<-B  A-in(animation)-->
        <item name="android:activityCloseEnterAnimation">@anim/right_in</item>
        <!--A<-B  B-out(animation)-->
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>
    <style name="MainTheme.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityOpenExitAnimation">@anim/right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>
    <style name="Progress_circle_acting">
        <item name="android:indeterminateDrawable">@drawable/ratate_progress_bar</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>
</resources>