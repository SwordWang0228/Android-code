<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/amigo_buttonPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:attr/dividerHorizontal"
    android:dividerPadding="0dip"
    android:minHeight="52dip"
    android:orientation="vertical"
    android:showDividers="beginning" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layoutDirection="locale"
        android:measureWithLargestChild="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/amigo_button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/gn_account_account_list_selector"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:minHeight="52dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gn_account_black5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/amigo_button3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/gn_account_account_list_selector"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:minHeight="52dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gn_account_black5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/amigo_button1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/gn_account_account_list_selector"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:minHeight="52dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gn_account_amigo_accent_color_g1"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>