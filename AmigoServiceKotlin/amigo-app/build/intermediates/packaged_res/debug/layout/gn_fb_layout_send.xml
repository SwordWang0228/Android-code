<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <amigo.widget.AmigoEditText
            android:id="@+id/gn_fb_id_messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/gn_fb_string_message_hint"
            android:lines="8"
            android:padding="@dimen/gn_fb_dimen_editText_padding"
            android:textSize="@dimen/gn_fb_dimen_messageEditText_textsize" />

        <com.gionee.feedback.ui.AddAttachImageView
            android:id="@+id/gn_fb_id_addAttachImabeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gn_fb_id_messageEditText"
            android:layout_marginTop="@dimen/gn_fb_dimen_addAttachImabeView_margintop" />

        <amigo.widget.AmigoEditText
            android:id="@+id/gn_fb_id_contactEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gn_fb_id_addAttachImabeView"
            android:layout_marginTop="@dimen/gn_fb_dimen_contactEditText_margintop"
            android:hint="@string/gn_fb_string_contact_hint"
            android:padding="@dimen/gn_fb_dimen_editText_padding"
            android:singleLine="true"
            android:textSize="@dimen/gn_fb_dimen_contactEditText_textsize" />

        <LinearLayout android:id="@+id/gn_fb_id_sendButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gn_fb_id_sendButton_heigh"
            android:layout_below="@id/gn_fb_id_contactEditText"
            android:layout_marginTop="@dimen/gn_fb_dimen_sendButton_margintop"
            android:background="@drawable/gn_fb_drawable_sendbutton"
            android:gravity="center">
            <com.gionee.feedback.ui.ExpendTextView
                android:id="@+id/gn_fb_id_sendButton_expendtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/gn_fb_string_send"
                android:textColor="@android:color/white"
                android:textSize="@dimen/gn_fb_dimen_sendButton_textsize" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>