<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <amigo.widget.AmigoTextView
            android:id="@+id/gn_fb_id_expandtextview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/gn_fb_color_record_messagecontent_text"
            android:textSize="@dimen/gn_fb_dimen_messagecontent_textsize"/>
    <amigo.widget.AmigoTextView
            android:id="@+id/gn_fb_id_expandtextview_expandable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/gn_fb_color_expend_text"
            android:textSize="12sp"
            android:visibility="gone"/>

</LinearLayout>